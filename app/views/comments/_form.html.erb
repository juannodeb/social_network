<%= form_with(model: comment, local: true) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% comment.errors.full_messages.each do |message| %>
          <div class="alert alert-warning alert-dismissible fade show float-end" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% form.label :content, class: 'form-label', for: 'contentInput' %>
    <%= form.text_area :content, class: 'form-control mb-5 comments__form--text-input', id: 'contentInput' %>
  </div>

  <%= form.hidden_field :post_id, value: params[:post_id] %>

  <div class="actions">
    <%= form.submit class: "btn btn-dark float-end" %>
  </div>
<% end %>
